<h1>Listing a_categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Display</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @a_categories.each do |a_category| %>
  <tr>
    <td><%= a_category.name %></td>
    <td><%= a_category.display %></td>
    <td><%= link_to 'Show', a_category %></td>
    <td><%= link_to 'Edit', edit_a_category_path(a_category) %></td>
    <td><%= link_to 'Destroy', a_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

