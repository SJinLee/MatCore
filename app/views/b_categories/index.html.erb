<h1>Listing b_categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Display</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @b_categories.each do |b_category| %>
  <tr>
    <td><%= b_category.name %></td>
    <td><%= b_category.display %></td>
    <td><%= link_to 'Show', b_category %></td>
    <td><%= link_to 'Edit', edit_b_category_path(b_category) %></td>
    <td><%= link_to 'Destroy', b_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

